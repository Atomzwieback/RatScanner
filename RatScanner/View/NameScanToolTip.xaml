<Window x:Class="RatScanner.View.NameScanToolTip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Focusable="False"
        IsTabStop="False"
        WindowStyle="None" x:ClassModifier="internal">
	<StackPanel>
		<Label Content="{Binding Avg24hPrice}" FontWeight="Bold" FontFamily="Roboto Normal" Padding="3,0" Foreground="#000000" Background="{Binding WarningBrush}"/>
	</StackPanel>
</Window>
